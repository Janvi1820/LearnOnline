@model LearnOnline.Models.InvoiceViewModel

@{
    ViewBag.Title = "Invoice";
}

<div class="invoice-box">
    <h2>Invoice</h2>
    <p><strong>Name:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.UserEmail</p>
    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>

    <table class="table">
        <thead>
            <tr>
                <th>Course</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Course.Name</td>
                    <td>@item.Course.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.TotalPrice</h3>

    <div class="invoice-actions">
        <a href="@Url.Action("DownloadInvoice", new { userId = Model.UserId })" class="btn btn-primary">Download Invoice</a>
        <button onclick="window.print()" class="btn btn-secondary">Print Invoice</button>
    </div>
</div>

<style>
    .invoice-box {
        max-width: 800px;
        margin: auto;
        padding: 30px;
        border: 1px solid #eee;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        font-size: 16px;
        line-height: 24px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color: #555;
    }

        .invoice-box table {
            width: 100%;
            line-height: inherit;
            text-align: left;
        }

            .invoice-box table td {
                padding: 5px;
                vertical-align: top;
            }

            .invoice-box table tr td:nth-child(2) {
                text-align: right;
            }

            .invoice-box table tr.top table td {
                padding-bottom: 20px;
            }

                .invoice-box table tr.top table td.title {
                    font-size: 45px;
                    line-height: 45px;
                    color: #333;
                }

            .invoice-box table tr.information table td {
                padding-bottom: 40px;
            }

            .invoice-box table tr.heading td {
                background: #eee;
                border-bottom: 1px solid #ddd;
                font-weight: bold;
            }

            .invoice-box table tr.details td {
                padding-bottom: 20px;
            }

            .invoice-box table tr.item td {
                border-bottom: 1px solid #eee;
            }

            .invoice-box table tr.item.last td {
                border-bottom: none;
            }

            .invoice-box table tr.total td:nth-child(2) {
                border-top: 2px solid #eee;
                font-weight: bold;
            }

    .invoice-actions {
        margin-top: 20px;
    }

    .btn {
        margin-right: 10px;
    }
</style>

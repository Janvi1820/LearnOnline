@model IEnumerable<LearnOnline.Models.Upload>

@{
    ViewData["Title"] = "showallvideos";
}

<h2>Development Courses</h2>
<p>Courses to get you started</p>
<p>Explore courses from experienced, real-world experts.</p> 

<!-- Course Tabs -->
<div class="course-tabs">
    <ul>
        <li class="@(string.IsNullOrEmpty(ViewBag.SelectedCourse) ? "active" : "")">
            <a href="@Url.Action("showallvideos", new { selectedCourse = "" })">All Courses</a>
        </li>
        @foreach (var course in ViewBag.Courses as List<string>)
        {
            <li class="@(ViewBag.SelectedCourse == course ? "active" : "")">
                <a href="@Url.Action("showallvideos", new { selectedCourse = course })">@course</a>
            </li>
        }
    </ul>
</div>


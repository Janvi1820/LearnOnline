<!-- Styles -->
<style>
    .course-tabs ul {
        display: flex;
        list-style-type: none;
        padding: 0;
    }

    .course-tabs li {
        margin-right: 10px;
    }

    .course-tabs a {
        text-decoration: none;
        padding: 10px 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        color: #333;
    }

    .course-tabs .active a {
        background-color: #007bff;
        color: white;
    }

    .videos {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .video-card {

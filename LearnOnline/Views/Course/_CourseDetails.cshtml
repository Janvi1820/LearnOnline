@model LearnOnline.Models.Course

<div class="modal-header">
    <h5 class="modal-title">@Model.Name</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <img src="~/@Model.Thumbnail" class="img-fluid" alt="@Model.Name" />
    <p class="mt-3">@Model.Description</p>
    <p><strong>Price:</strong> @Model.Price</p>
</div>
<div class="modal-footer">
    <a href="/Course/Details/@Model.Id" class="btn btn-primary">Go to Course</a>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>

@model LearnOnline.Models.Auth

@{
    ViewData["Title"] = "SignUp";
}

<div class="udemy-full-page-container">
    <div class="udemy-login-wrapper">
        <div class="udemy-image-container">
            @* <img src="/Content/Images/Screenshot 2024-07-04 220727.png" alt="Udemy Login Image" class="udemy-login-image" /> *@
        </div>
        <div class="udemy-login-form-container">
            <h1 class="udemy-login-title">Create your Learn<br /> <br /> Digitally account</h1>
            <div class="udemy-login-form-wrapper">
                <form asp-action="SignUp" method="post" class="udemy-login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="udemy-form-label"></label>
                        <input asp-for="Username" class="form-control udemy-input" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="udemy-form-label"></label>
                        <input asp-for="Email" class="form-control udemy-input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="udemy-form-label"></label>
                        <input asp-for="Password" class="form-control udemy-input" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary udemy-submit-btn" />
                    </div>
                </form>
            </div>
            <div class="text-center mt-3">
                <span>Already have an account? <a asp-action="SignIn">Sign in</a></span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .udemy-full-page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: transparent;
    }

    .udemy-login-wrapper {
        display: flex;
        width: 100%;
        max-width: 1200px;
        background-color: transparent;
        border-radius: 8px;
        overflow: hidden;
    }

    .udemy-image-container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: transparent;
    }

    .udemy-login-image {
        max-width: 100%;
        height: auto;
    }

    .udemy-login-form-container {
        flex: 1;
        padding: 2rem;
    }

    .udemy-login-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .udemy-form-label {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .udemy-input {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border: 1px solid #ced4da;
        border-radius: 4px;
        transition: border-color 0.3s;
    }

        .udemy-input:focus {
            border-color: #5624d0;
            box-shadow: 0 0 8px rgba(86, 36, 208, 0.1);
        }

    .udemy-submit-btn {
        width: 100%;
        padding: 0.5rem;
        background-color: #5624d0;
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 4px;
    }

        .udemy-submit-btn:hover {
            background-color: #3f1b96;
        }

    .text-center {
        text-align: center;
    }

    .mt-3 {
        margin-top: 1rem;
    }
</style>

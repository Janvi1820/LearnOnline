@model LearnOnline.Models.Login

@{
    ViewData["Title"] = "SignIn";
}

<div class="udemy-full-page-container">
    <div class="udemy-login-wrapper">
        <div class="udemy-image-container">
            @* <img src="/Content/Images/Screenshot 2024-07-04 220727.png" alt="Udemy Login Image" class="udemy-login-image" /> *@
        </div>
        <div class="udemy-login-form-container">
            <h1 class="udemy-login-title">Log in to your Learn<br /> <br /> Digitally account</h1>
            <div class="udemy-login-form-wrapper">
                <form asp-action="SignIn" method="post" class="udemy-login-form">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="udemy-form-label"></label>
                        <input asp-for="Email" class="form-control udemy-input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="udemy-form-label"></label>
                        <input asp-for="Password" class="form-control udemy-input" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log in" class="btn btn-primary udemy-submit-btn" />
                    </div>
                    <div class="form-group text-center">
                        <a href="#" class="udemy-forgot-password">Forgot Password</a>
                    </div>
                    <div class="form-group text-center">
                        <span>Other log in options</span>
                    </div>
                    <div class="form-group udemy-social-login">
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-light udemy-google-btn">
                            <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo" class="udemy-social-logo" />
                        </a>
                        <a href="#" class="btn btn-light udemy-facebook-btn">
                            <img src="your-facebook-logo-url" alt="Facebook Logo" class="udemy-social-logo" />
                        </a>
                        <a href="#" class="btn btn-light udemy-apple-btn">
                            <img src="your-apple-logo-url" alt="Apple Logo" class="udemy-social-logo" />
                        </a>
                    </div>
                </form>
            </div>
            <div class="text-center mt-3">
                <span>Don't have an account? <a href="#">Sign up</a></span>
            </div>
            <div class="text-center mt-3">
                <a href="#">Log in with your organization</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
